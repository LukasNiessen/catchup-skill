{
  "manifest_version": 3,
  "name": "BriefBot Cookie Bridge",
  "version": "1.0.0",
  "description": "Auto-exports X/Twitter session cookies for BriefBot search. Runs silently in the background.",
  "permissions": [
    "cookies",
    "alarms",
    "nativeMessaging"
  ],
  "host_permissions": [
    "*://*.x.com/*",
    "*://*.twitter.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
